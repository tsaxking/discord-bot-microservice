{
	"compilerOptions": {
		"outDir": "./dist",
		"declarationDir": "./dist",
		"rootDir": "./src",
		"module": "ESNext",
		"target": "es2022",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true, // Avoid type-checking external library typings
		"moduleResolution": "bundler",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "lib"]
}
